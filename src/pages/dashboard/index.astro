---
import DashboardLayout from "@layouts/DashboardLayout.astro";
---
<DashboardLayout>
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <div class="p-4 bg-white rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-800">Statistics</h3>
      <p class="mt-2 text-gray-600">Overview of your statistics.</p>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-800">Recent Activity</h3>
      <p class="mt-2 text-gray-600">See what you have been up to lately.</p>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-800">Notifications</h3>
      <p class="mt-2 text-gray-600">Check your latest notifications.</p>
    </div>
  </div>
</DashboardLayout>
