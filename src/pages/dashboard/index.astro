---
import DashboardLayout from "@layouts/DashboardLayout.astro";
---

<DashboardLayout title="Dashboard">

    
      <!-- Stats Section -->
      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
        <div class="bg-indigo-100 p-4 rounded-lg shadow text-indigo-800">
          <h3 class="text-lg font-medium">Total Workshops</h3>
          <p class="text-2xl font-bold">12</p>
        </div>
        <div class="bg-indigo-100 p-4 rounded-lg shadow text-indigo-800">
          <h3 class="text-lg font-medium">Completed Workshops</h3>
          <p class="text-2xl font-bold">8</p>
        </div>
        <div class="bg-indigo-100 p-4 rounded-lg shadow text-indigo-800">
          <h3 class="text-lg font-medium">Upcoming Workshops</h3>
          <p class="text-2xl font-bold">4</p>
        </div>
      </section>
         <!-- List of Workshops regsitered -->

      <!-- Workshops Section -->
      <section>
        <h3 class="text-xl font-semibold mb-4">Registered Workshops</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white border border-indigo-200 p-4 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h4 class="text-lg font-semibold mb-2">Advanced Tailwind Workshop</h4>
            <p class="text-gray-600 mb-4">Learn advanced techniques in Tailwind CSS to enhance your frontend skills.</p>
            <button class="bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700">View Details</button>
          </div>
          <div class="bg-white border border-indigo-200 p-4 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h4 class="text-lg font-semibold mb-2">Intro to JavaScript</h4>
            <p class="text-gray-600 mb-4">Get started with JavaScript programming and build dynamic web applications.</p>
            <button class="bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700">View Details</button>

          </div>
          <div class="bg-white border border-indigo-200 p-4 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h4 class="text-lg font-semibold mb-2">React Basics</h4>
            <p class="text-gray-600 mb-4">Learn the fundamentals of React and start building interactive UIs.</p>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">Register</button>
          </div>
          <div class="bg-white border border-indigo-200 p-4 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h4 class="text-lg font-semibold mb-2">Python for Data Science</h4>
            <p class="text-gray-600 mb-4">Discover how to use Python for data analysis and visualization.</p>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">Register</button>
          </div>
          <div class="bg-white border border-indigo-200 p-4 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h4 class="text-lg font-semibold mb-2">Machine Learning Basics</h4>
            <p class="text-gray-600 mb-4">An introduction to machine learning concepts and techniques.</p>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">Register</button>
          </div>
          <div class="bg-white border border-indigo-200 p-4 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h4 class="text-lg font-semibold mb-2">UI/UX Design Principles</h4>
            <p class="text-gray-600 mb-4">Learn the basics of UI/UX design to create user-friendly interfaces.</p>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">Register</button>
          </div>
        </div>
      </section>
</DashboardLayout>