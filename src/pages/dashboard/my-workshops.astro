---
import DashboardLayout from "@layouts/DashboardLayout.astro";


---

<DashboardLayout title="My Workshop">
      <header class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold">My Workshops</h2>
      </header>

      <!-- My Workshops Section -->
      <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Workshop Item -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow border border-slate-300">
          <h3 class="text-lg font-medium mb-2">Advanced Tailwind Workshop</h3>
          <p class="text-gray-600 mb-4">Learn advanced techniques in Tailwind CSS to enhance your frontend skills.</p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Date: June 20, 2024</span>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">View Details</button>
          </div>
        </div>

        <!-- Workshop Item -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow border border-slate-300">
          <h3 class="text-lg font-medium mb-2">Intro to JavaScript</h3>
          <p class="text-gray-600 mb-4">Get started with JavaScript programming and build dynamic web applications.</p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Date: July 5, 2024</span>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">View Details</button>
          </div>
        </div>

        <!-- Workshop Item -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow border border-slate-300">
          <h3 class="text-lg font-medium mb-2">React Basics</h3>
          <p class="text-gray-600 mb-4">Learn the fundamentals of React and start building interactive UIs.</p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Date: July 15, 2024</span>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">View Details</button>
          </div>
        </div>

        <!-- Workshop Item -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow border border-slate-300">
          <h3 class="text-lg font-medium mb-2">Python for Data Science</h3>
          <p class="text-gray-600 mb-4">Discover how to use Python for data analysis and visualization.</p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Date: August 1, 2024</span>
            <button class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-500">View Details</button>
          </div>
        </div>

        <!-- Workshop Item -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow border border-slate-300">
