---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
// export const prerender = true;

export const metadata = {
  title: "Contact Skyfusion",
  description: "Get in touch with Skyfusion for inquiries and support. We are here to help.",
  url: "/contact",
  imageUrl: "/opengraph.jpg"  // Update with the appropriate image URL if needed
};
---

<Layout title={metadata.title} description={metadata.description} imageUrl={metadata.imageUrl}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16 px-10">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contact Skyfusion</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Have something to say? We are here to help. Fill up the form or send
          email or call phone.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>Taifa, Norway</span>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:info@skyfusion.dev">info@skyfusion.dev</a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
            <a href="tel:+233206171719">+233 206 17 17 19</a>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Skyfusion",
    "url": "https://www.skyfusion.training",
    "logo": "https://www.skyfusion.training/logo.png",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+233206171719",
      "contactType": "Customer Service",
      "email": "info@skyfusion.training",
      "areaServed": "NO",
      "availableLanguage": "English"
    },
    "sameAs": [
      "https://www.facebook.com/skyfusion",
      "https://twitter.com/skyfusion",
      "https://www.linkedin.com/company/skyfusion"
    ]
  }
</script>
