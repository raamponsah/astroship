---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { SignedIn, SignedOut } from "astro-clerk-auth/components/control";
import { UserButton } from "astro-clerk-auth/components/interactive";

const { auth } = Astro.locals;

export const prerender = false;

const menuitems = [
  { title: "Home", path: "/" },
  { title: "About", path: "/about" },
  { title: "Training", path: "/training" },
  { title: "Blog", path: "/blog" },
  { title: "Contact", path: "/contact" },
];

---

<header class="flex z-10 top-0 bg-white shadow fixed py-3 lg:py-5 flex-col lg:flex-row justify-between items-center px-4 lg:px-40">
  <Astronav>
    <div class="flex items-center justify-between w-full lg:w-auto">
      <a href="/" class="w-48 lg:w-auto">
        <img src="/LOGO-SKYFUSION.png" class="lg:w-2/6" />
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-6 h-6 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex lg:flex-grow items-center justify-center lg:justify-end mt-2 lg:mt-0">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        {menuitems.map((item, index) => (
          <li key={index}>
            <a
              href={item.path}
              class="flex lg:px-3 py-2 items-center text-lg text-gray-600 hover:text-gray-900"
            >
              <span>{item.title}</span>
              {item.badge && (
                <span class="ml-1 px-2 py-0.5 text-xs animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                  New
                </span>
              )}
            </a>
          </li>
        ))}
      </ul>
      <div class="lg:flex items-center gap-4 mt-4 lg:mt-0">
        {auth && auth().userId ? (
          <SignedIn>
            <UserButton />
          </SignedIn>
        ) : (
          <a href="/sign-in" class="bg-indigo-500 px-4 py-2 text-white rounded-xl inline-block">Sign In</a>
        )}
      </div>
    </MenuItems>
  </Astronav>
</header>
