---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { SignedIn, SignedOut } from "astro-clerk-auth/components/control";
import { UserButton } from "astro-clerk-auth/components/interactive";

const { auth } = Astro.locals;

export const prerender = false;

const menuitems = [
  { title: "Home", path: "/" },
  { title: "About", path: "/about" },
  { title: "Training", path: "/training" },
  { title: "Blog", path: "/blog" },
  { title: "Contact", path: "/contact" },
];

---

<header class="flex z-10 top-0 bg-white shadow fixed py-5 flex-col lg:flex-row justify-between items-center px-40">
  <Astronav>
    <div class="flex lg:w-auto items-center justify-between">
      <a href="/" class="w-2/6 lg:w-1/2">
        <img src="/LOGO-SKYFUSION.png" />
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:w-auto mt-2 lg:flex lg:mt-0">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        {menuitems.map((item, index) => (
          <li key={index}>
            <a
              href={item.path}
              class="flex lg:px-3 py-2 items-center text-lg text-gray-600 hover:text-gray-900"
            >
              <span>{item.title}</span>
              {item.badge && (
                <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                  New
                </span>
              )}
            </a>
          </li>
        ))}
      </ul>
      <div class="lg:hidden flex items-center mt-3 gap-4">
        {auth && auth().userId ? (
          <SignedIn>
            <UserButton />
          </SignedIn>
        ) : (
          <a href="/sign-in" class="bg-indigo-500 px-5 py-2 text-white rounded-full inline-block">Sign In</a>
        )}
      </div>
    </MenuItems>
  </Astronav>
  <div>
    <div class="hidden lg:flex items-center gap-4">
      {auth && auth().userId ? (
        <>
          <a href="/dashboard" class="group relative inline-flex items-center justify-center overflow-hidden text-sm font-medium transition duration-300 ease-in-out rounded-md px-3 py-1 shadow-sm bg-gradient-to-b from-white/20 to-transparent opacity-70 hover:opacity-100 ring-1 ring-indigo-500 bg-indigo-500 text-white">
            Dashboard
          </a>
          <SignedIn>
            <UserButton />
          </SignedIn>
        </>
      ) : (
        <a href="/sign-in" class="bg-indigo-500 px-5 py-2 text-white rounded-full inline-block">Sign In</a>
      )}
    </div>
  </div>
</header>
