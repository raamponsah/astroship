{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": "src",    
    "strictNullChecks": true,
    "types": [
      "astro/client",
      "./global.d.ts"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}