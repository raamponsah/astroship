// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int              @id @default(autoincrement())
  email       String           @unique
  password    String
  name        String?
  workshops   UserWorkshop[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Workshop {
  id          Int              @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  resources   WorkshopResource[]
  users       UserWorkshop[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model WorkshopResource {
  id          Int              @id @default(autoincrement())
  workshopId  Int
  title       String
  url         String
  type        ResourceType
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  workshop    Workshop         @relation(fields: [workshopId], references: [id])

  @@index([workshopId])
}

model UserWorkshop {
  userId      Int
  workshopId  Int
  paid        Boolean          @default(false)
  paymentDate DateTime?

  user        User             @relation(fields: [userId], references: [id])
  workshop    Workshop         @relation(fields: [workshopId], references: [id])

  @@id([userId, workshopId])
  @@index([userId])
  @@index([workshopId])
}

enum ResourceType {
  PDF
  VIDEO
  LINK
  OTHER
}
